<h1>This is the result page!</h1>

<% bookInfo.forEach(book => {  %>
<div class="bookDiv" >
    <form method="POST" action="/book/favorites">
        <div  class="card" style="width: 30rem;">
                <img style="height: 30rem;" src="<%= book.image_url %>" class="card-img-top" alt="...">
                <input hidden  type="text" name="image_url" value="<%= book.image_url %>">
                <div class="card-body">
                  <h5 class="card-title">Title: <%= book.title %></h5>
                  <input hidden type="text" name="title" value="<%= book.title %>">
                  <p style="height: 20rem; font-size: 10px; overflow-y: scroll;" class="card-text">Book Description: <%= book.description %>...</p>
                  <input hidden type="text" name="description" value="<%= book.description %>">
                </div>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item">Author(s): <%= book.author %></li>
                  <input hidden type="text" name="author" value="<%= book.author %>">
                  <li class="list-group-item">ISBN: <%= book.isbn %></li>
                  <input hidden type="text" name="isbn" value="<%= book.isbn %>">
                  <li class="list-group-item"><a href="<%=book.preview_link%>">Preview Book Here!</li>
                </ul>
                <div class="card-body">
                  <a href="#" class="card-link">Card link</a>
                  <button class=".btn-success" type="submit">Pin it!</button>
                </div>
        </div>
    </form>
</div>
<% }) %>
